<div class="row">
	<%= render "users/list_sidebar", { user: @user, book_new: @book_new } %>

	<div class="col-md-8">
		<% if @user == current_user %>
			<h1 style="color: navy">My Books</h1>
		<% else %>
			<h1>User Books</h1>
		<% end %>
		<table class="table">
			<tr class="table-info">
				<td></td>
				<td>Title</td>
				<td>Opinion</td>
			</tr>
			<% @books.each do |book| %>
			<tr>
				<td><%= link_to user_path(book.user) do %>
					<%= attachment_image_tag @user, :profile_image, size:"50x50",
						format:"jpg", fallback:"no_image.jpg" %> <% end %>
				</td>
				<td class="align-middle"><%= link_to book_path(book) do %>
					<%= book.title %><% end %></td>
				<td class="align-middle"><%= book.body %></td>
			</tr>
			<% end %>
		</table>
	</div>

</div>