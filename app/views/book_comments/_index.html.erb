<h2 style="margin-top: 30px" >Comments</h2>
	<table class="table table-sm">
		<tr class="table-primary">
			<td>User</td>
			<td>Comments</td>
			<td>Day</td>
			<td></td>
		</tr>
		<% comments.each do |comment| %>
		<tr>
			<td class="align-middle"><%= link_to user_path(comment.user) do %>
				<%= attachment_image_tag comment.user, :profile_image, size:"40x40",
					format:"jpg", fallback:"no_image.jpg" %><br>
					<%= comment.user.name%> <% end %>
			</td>
			<td class="align-middle"><%= comment.comment %></td>
			<td class="align-middle"><%= comment.created_at.strftime('%Y/%m/%d') %></td>
			<% if comment.user_id == current_user.id %>
				<td class="align-middle">
					<%= link_to book_book_comment_path(comment.book_id, comment.id),
						 class:"btn btn-danger", method: :delete, remote: true do %>
						<i class="fas fa-trash"></i><% end %>
				</td>
			<% end %>
		</tr>
		<% end %>
	</table>